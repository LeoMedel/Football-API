<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context="com.example.mkmkmk.footballapi.MainActivity">


    <TextView
        android:id="@+id/footApi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="casual"
        android:text="FOOTBALL API"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:fontFamily="casual"
        android:text="Dans cette Application, vous pourrez trouver les differents Ligues disponibles sur l'API de Football http://api.football-data.org.  Vous devrez sélectionner une ligue dans la liste ci-dessous pour pouvoir voir le menu principal et leur information disponible. Table des positions, tous les Matchs et les Équipes, ainsi que, l'ubication de leur Stade sur la carte."
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/progressLeague"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="50dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <GridView
        android:id="@+id/leagueList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="15dp"
        android:numColumns="3"
        android:verticalSpacing="50dp"
        android:visibility="visible" />
</LinearLayout>
